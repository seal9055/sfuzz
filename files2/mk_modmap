		trans_names["he"]	= "hebrew_he";
		trans_names["vav"]	= "hebrew_waw";
		trans_names["zayin"]	= "hebrew_zain";
		trans_names["het"]	= "hebrew_chet";
		trans_names["tet"]	= "hebrew_tet";
		trans_names["yod"]	= "hebrew_yod";
		trans_names["finalkaf"]	= "hebrew_finalkaph";
