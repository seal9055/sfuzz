# Hebrew
		trans_names["doubleunderscore"]	= "hebrew_doublelowline";
		trans_names["alef"]	= "hebrew_aleph";
		trans_names["bet"]	= "hebrew_bet";
		trans_names["gimel"]	= "hebrew_gimel";
