version() {
  echo "dehtmldiff - patchutils version 0.3.4"
}

usage() {
  echo "usage: dehtmldiff [FILES...]"
}

while [ "$#" -gt 0 ]
do
  case "$1" in
  --help)
	usage
	exit 0
	;;
  --version)
	version
	exit 0
	;;
  --)
	shift
	break
	;;

  *)
	break
	;;
  esac
done

sed -e '
s/<[^>]*>//g
s/&gt;/>/g
s/&lt;/</g
s/&quot;/"/g
' -- "$@" | awk \
'/\&[^a].*;/ || /\&a[^m].*;/ || /\&am[^p].*;/ {
  print "dehtmldiff: unknown entity at line " FNR ":" > "/dev/stderr";
  print > "/dev/stderr";
  exit 1 }
{ print }' | \
  sed -e 's/&amp;/\&/g' | unwrapdiff
